{
  "compilerOptions": {
    "lib": ["ES6"],
    "module": "commonjs",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "checkJs": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
